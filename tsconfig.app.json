{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "noImplicitAny": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*":["utils/*"],
      "@interface/*":["interface/*"],
      "@features/*":["features/*"],
      "@pages/*":["pages/*"],
      "@app/*":["app/*"],
      "@widgets/*":["widgets/*"],
      "@shared/*":["shared/*"],
      "@store/*":["store/*"],
      "@composables/*":["composables/*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
